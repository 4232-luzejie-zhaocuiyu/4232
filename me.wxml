<!--pages/mycenter/mycenter.wxml-->
<view class='amountBg'>
  <view class='img'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='account'>
    <view class='nick-name'>
      <open-data type="userNickName" lang="zh_CN"></open-data>
    </view>
    <view class='address'>
      <open-data type="userCountry" lang="zh_CN"></open-data>·
      <open-data type="userProvince" lang="zh_CN"></open-data>·
      <open-data type="userCity" lang="zh_CN"></open-data>
    </view>
  </view>
</view>
<!-- 底部列表 -->
<view class='content'>
  <!-- 收藏列表 -->
   <view class='line'></view>
  <view class='item' bindtap='onCollectClick'>
    <view class='icon'>
      <image src='../../image/product.jpg' style="width: 33px; height: 33px"></image>
    </view>
    <view class='itemName'>
      <view>WorkAholic</view>
    </view>
    <view class='right'>></view>
  </view>
 
  <!-- 发布历史 -->
  <view class='hr'></view>
  <view class='item' bindtap='onHistoryClick'>
    <view class='icon'>
      <image src='../../image/kaifazhe.jpg' style="width: 33px; height: 33px"></image>
    </view>
    <view class='itemName'>
      <view>开发者</view>
    </view>
    <view class='right'>></view>
  </view>
  <!--间隔灰横条-->
  <view class='hr'></view>
  <view class='line'></view>
  <!-- 邀请好友 -->
  <view class='item'>
    <view class='icon'>
      <image src='../../image/fenxiang.jpg' style="width: 33px; height: 33px"></image>
    </view>
    <view class='itemName'>
      <view>邀请好友</view>
    </view>
    <view class='right' bindtap='clickInvitivation'>
      <text class='opr'>一起来玩~</text>></view>
  </view>
  <view class='hr'></view>
  <!-- 产品意见 -->
  <view class='item'  bindtap='onAdvanceClick'>
    <view class='icon'>
      <image src='../../image/fankui.jpg' style="width: 33px; height: 33px"></image>
    </view>
    <view class='itemName'>
      <view>意见反馈</view>
    </view>
    <view class='right'>></view>
  </view>
  <view class='hr'></view>

</view>